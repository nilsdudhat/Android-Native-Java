<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#290410</item>
        <item name="colorPrimaryVariant">#5B1600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">#80FFFFFF</item>
        <item name="colorOnSecondary">#40FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/urbanist</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="BauhausTextView">
        <item name="fontFamily">@font/bauhaus</item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/white</item>
    </style>
</resources>
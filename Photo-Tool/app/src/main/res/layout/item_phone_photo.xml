<?xml version="1.0" encoding="utf-8"?>
<com.phototool.imageconverter.cropimage.compressphoto.resizephoto.app.views.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/square_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/full_app_name"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_2sdp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/progress2"
            android:visibility="gone" />

<!--        <RelativeLayout-->
<!--            android:id="@+id/rl_delete"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:visibility="gone"-->
<!--            android:background="@drawable/bg_delete">-->

<!--            <ImageView-->
<!--                android:id="@+id/img_delete"-->
<!--                android:layout_width="@dimen/_25sdp"-->
<!--                android:layout_height="@dimen/_25sdp"-->
<!--                android:layout_margin="@dimen/_5sdp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:src="@drawable/ic_delete"-->
<!--                android:layout_alignParentRight="true" />-->
<!--        </RelativeLayout>-->
        <LinearLayout
            android:id="@+id/ll_checked"
            android:background="#64111111"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_checked"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check_black"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>
</com.phototool.imageconverter.cropimage.compressphoto.resizephoto.app.views.SquareLayout>

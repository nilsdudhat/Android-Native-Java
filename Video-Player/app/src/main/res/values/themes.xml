<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!--        Remove title bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/ui_controls_background
        </item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <!--        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>-->

        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:itemBackground">@color/bg_color</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
        <item name="main_bg">@color/white</item>
        <item name="navigation_bg">#F2F2F2</item>
        <item name="card_bg">#F2F2F2</item>
        <item name="txt_color">@color/black</item>
        <item name="ic_color">@color/black</item>
        <item name="opposite_color">@color/black</item>
        <item name="opposite_light_color">#80000000</item>
        <item name="theme_color">@color/white</item>
        <item name="light_color_50">#80000000</item>
        <item name="light_color_25">#80000000</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Regular" parent="AppTheme">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Semi_Bold" parent="AppTheme">
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="Bold" parent="AppTheme">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

